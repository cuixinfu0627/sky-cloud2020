<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="1000 seconds">
    <property name="appName" value="order2" />
	<!-- Output to Console -->
	<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>@log.pattern@</pattern>
			<charset>@project.build.sourceEncoding@</charset>
		</encoder>
	</appender>
	<!-- Output to File -->
	<appender name="File"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>@log.path@${appName}/sky-${appName}.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<FileNamePattern>
                @log.path@${appName}/sky-${appName}.%d{yyyy-MM-dd}.%i.log
			</FileNamePattern>
			<!-- keep 1 days worth of history -->
			<MaxHistory>@log.history.days@</MaxHistory>
			<maxFileSize>@log.maxFileSize@</maxFileSize>
			<totalSizeCap>@log.totalSizeCap@</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>@log.pattern@</pattern>
			<charset>@project.build.sourceEncoding@</charset>
		</encoder>
	</appender>
	<root level="debug">
		<appender-ref ref="Console" />
		<appender-ref ref="File" />
	</root>

	<logger name="com.ibatis" level="info" />
	<logger name="com.ibatis.common.jdbc.SimpleDataSource" level="info" />
	<logger name="com.ibatis.common.jdbc.ScriptRunner" level="info" />
	<logger name="org.mybatis.generator" level="info" />
	<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="info" />
	<logger name="java.sql.Connection" level="info" />
	<logger name="java.sql.Statement" level="info" />
	<logger name="java.sql.PreparedStatement" level="info" />
	<logger name="com.sky.cloud" level="info" />
</configuration>
